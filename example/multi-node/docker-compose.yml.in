version: '3'

services:
  node:
    image: ${IROHA_PRJ}/${IROHA_IMG}
    container_name: iroha-node-1
    restart: always
    ports:
      - "50051:50051"
      - "10001:10001"
    environment:
      - IROHA_NODEKEY=node1
      - CCACHE_DIR=/tmp/ccache
    volumes:
      - ${PWD}:/opt/iroha/config
      - ${PWD}/iroha/tmp/block_store:/tmp/block_store
      - ccache-data:/tmp/ccache
    working_dir: /opt/iroha/config
    depends_on:
      - postgres

  postgres:
    image: postgres:13-alpine
    container_name: iroha-postgres-1
    restart: always
    environment:
      - POSTGRES_USER=iroha
      - POSTGRES_PASSWORD=HelloW0rld
    volumes:
      - ${PWD}/iroha/var/lib/postgresql/data:/var/lib/postgresql/data

volumes:
  ccache-data:
